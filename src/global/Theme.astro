---
// see https://fontsource.org/docs/installation
// Supports weights 100-900
import '@fontsource-variable/montserrat';
// Supports weights 300-900
import '@fontsource-variable/merriweather';
---

<style is:global>
  :root {
    --color-background: #F9F6F2;
    --color-text: #1C1C1E;
    --color-accent: #D4A017;
    --color-focus-ring: #3FB9A0;

    font-size: 18px;

    --font-heading: 'Montserrat Variable', sans-serif;
    --font-body: 'Merriweather Variable', serif;

    --size-page-width: 800px;
    --size-page-padding: 1rem;
  }

  body {
    background-color: var(--color-text);
    color: var(--color-text);
    font-family: var(--font-body);
  }
  h1 {
      font-family: var(--font-heading);
      font-weight: bold;
      color: var(--color-focus-ring);
      font-size: 3rem;
      padding: 1.5rem;
  }
  h2 {
    font-family: var(--font-heading);
    font-weight: bold;
    color: var(--color-accent);
    font-size: 2rem;
  }
  h3 {
    font-family: var(--font-heading);
    color: var(--color-focus-ring);
    font-size: 1.5rem;
  }
  h4,
  h5,
  h6 {
    font-family: var(--font-body);
    color: var(--color-focus-ring);
    font-size: 1.5rem;
  }

  /* default focus ring styles */
  *:focus-visible {
    outline: 3px solid var(--color-focus-ring);
  }

  .hidden {
  display: none;
}

body {
  font-family: 'Montserrat Variable', sans-serif;
}

body {
  font-family: 'Merriweather Variable', serif;
}
</style>
