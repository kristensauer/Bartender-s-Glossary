---
// see https://fontsource.org/docs/installation
// Supports weights 100-900
import '@fontsource-variable/montserrat';
// Supports weights 300-900
import '@fontsource-variable/merriweather';
import '@fontsource/homemade-apple';

---

<style is:global>
  :root {
    --color-background: #030507;
    --color-text: #eef2f7;
    --color-primary: #89a9dc;
    --color-secondary: #204a88;
    --color-accent: #d61919;

    --font-heading: 'Montserrat Variable', sans-serif;
    --font-body: 'Merriweather Variable', serif;
    --font-special: 'Homemade Apple', cursive;
  }

  body {
    background-color: var(--color-background);
    color: var(--color-background);
    overflow-x: hidden;
  }
  html {
    overflow-x: hidden;
  }
  
  h1 {
    font-family: var(--font-heading);
    color: var(--color-accent);
    font-size: 1.5vw;
    text-align: center;
  }

  h3 {
    font-family: var(--font-heading);
    color: var(--color-background);
    font-size: 1.75rem;
    font-weight: medium;
    text-align: center; 
  }
h4, h5, h6, p, {
  font-family: var(--font-body);
  color: var(--color-accent);
  font-size: 1.5rem;
}
ol, ul, li {
  font-family: var(--font-body);
  color: var(--color-background);
  font-size: 1rem;
}
  *:focus-visible {
    outline: 3px solid var(--color-accent);
  }

  .hidden {
  display: none;
}

body {
  font-family: 'Montserrat Variable', sans-serif;
}

body {
  font-family: 'Merriweather Variable', serif;
}
  .content-box {
    background: var(--color-text);
    border: 2px solid var(--color-text);
    padding: 4rem 1.5rem 3.5rem 1.5rem;
    margin: 2rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    min-height: 300px;
    max-height: 570px;
    height: auto;
    width: 150%;
    min-width: 340px;
    max-width: 1000px;
    scroll-snap-align: center;
    position: relative;
    right: 0;
    margin-left: auto;
    /* Make sure long content stays inside the card instead of overflowing the parent
       Use border-box so padding is included in size calculations. Allow internal scroll
       when content exceeds max-height so long lists (e.g. Sangria) don't spill out. */
    box-sizing: border-box;
    overflow: auto;
  }
  .steps-box {
    background: var(--color-accent);
    padding: 0.6rem 1.0rem; /* slight extra vertical padding */
    box-shadow: 0 1px 4px rgba(0,0,0,0.03);
    /* Steps are a vertical list inside the box; keep normal block flow so the
       ordered list can wrap and respect the container width/height. */
    display: block;
    gap: 0.5rem;
    width: 100%;
    max-width: 100%;
    margin-top: 0.5rem;
    align-self: stretch;
  }
  .steps-box li {
    color: var(--color-text);
  }
  .content-details {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    gap: 2rem;
    height: 100%;
    /* Allow children to shrink inside a flex container instead of overflowing. */
    min-height: 0;
    padding-top: 2rem;
  }
  .content-info {
    flex: 2;
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* push steps-box to bottom */
    gap: 0.75rem;
    /* Ensure long content inside this flex child can scroll/shrink properly. */
    min-height: 0;
  }
  .content-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
    border-radius: 50%;
    max-width: 150px;
    max-height: 150px;
    overflow: hidden;
  }
    .content-image {
    position: absolute;
    top: -80px;
    left: 50%;
    transform: translateX(-50%);
    width: 150px;
    height: 150px;
    max-width: 150px;
    max-height: 150px;
    border-radius: 50%;
    box-shadow: 0 2px 8px rgba(0,0,0,0.10);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    z-index: 2;
  }
  .content-image {
    z-index: 999;
  }

  #tools-bleed-img {
    z-index: 9999;
  }
</style>
