---
// see https://fontsource.org/docs/installation
// Supports weights 100-900
import '@fontsource-variable/montserrat';
// Supports weights 300-900
import '@fontsource-variable/merriweather';
import '@fontsource/homemade-apple';

---

<style is:global>
  :root {
    --color-background: #030507;
    --color-text: #eef2f7;
    --color-primary: #89a9dc;
    --color-secondary: #204a88;
    --color-accent: #d61919;

    --font-heading: 'Montserrat Variable', sans-serif;
    --font-body: 'Merriweather Variable', serif;
    --font-special: 'Homemade Apple', cursive;
  }

  body {
    background-color: var(--color-background);
    color: var(--color-background);
    overflow-x: hidden;
  }
  html {
    overflow-x: hidden;
  }
  
  h1 {
    font-family: var(--font-heading);
    color: var(--color-accent);
    font-size: 1.5vw;
    text-align: center;
  }

  h3 {
    font-family: var(--font-heading);
    color: var(--color-background);
    font-size: 1.5rem;
    font-weight: medium;
    text-align: left; 
  }
h4, h5, h6, p {
  font-family: var(--font-body);
  color: var(--color-text);
  font-size: 1.0rem;
  padding: 0.25rem 0;
}
ol, ul, li {
  font-family: var(--font-body);
  color: var(--color-text);
  font-size: 1.0rem;
  padding: 0.1rem 0;
}
  *:focus-visible {
    outline: 3px solid var(--color-accent);
  }

  .hidden {
  display: none;
}

body {
  font-family: 'Montserrat Variable', sans-serif;
}

body {
  font-family: 'Merriweather Variable', serif;
}
  .content-box {
    background: var(--color-text);
    padding: 4rem 1.5rem 3.5rem 1.5rem;
    border-radius: 35px;
    margin: 2rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    min-height: 300px;
    max-height: 570px;
    height: auto;
    width: 150%;
    min-width: 340px;
    max-width: 1000px;
    scroll-snap-align: center;
    position: relative;
    right: 0;
    margin-left: auto;
    box-sizing: border-box;
    overflow: hidden;
  }

  .content-box h3, li, ul, li {
    color: var(--color-text);
    padding: 0.1rem;
  }

.content-details {
  position: absolute;
  z-index: 2;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.content-image {
  position: absolute;
  inset: 0;
  width: 120%;
  height: 120%;
  border-radius: 0; /* remove circle */
  z-index: 0;
  overflow: hidden;
}

.content-image::after {
  content: "";
  position: absolute;
  z-index: 0;
  left: 0;
  right: 0;
  top: var(--content-gradient-top, 37%);
  bottom: 0%;
  backdrop-filter: blur(8px);
  background: linear-gradient(
    to top,
    rgba(3, 5, 7, 0.39) 0%,
    rgba(3, 5, 7, 0.38) 15%,
    rgba(3, 5, 7, 0.14) 65%,
    rgba(3, 5, 7, 0.04) 85%,
    rgba(3, 5, 7, 0) 100%
  );
  pointer-events: none;
}

.tools-horizontal-scroll .content-image::after {
  content: "";
  position: absolute;
  z-index: 0;
  left: 0;
  right: 0;
  top: 75%;
  bottom: 0%;
  backdrop-filter: blur(8px);
  background: linear-gradient(
    to top,
    rgba(3, 5, 7, 0.39) 0%,
    rgba(3, 5, 7, 0.38) 15%,
    rgba(3, 5, 7, 0.14) 65%,
    rgba(3, 5, 7, 0.04) 85%,
    rgba(3, 5, 7, 0) 100%
  );
  pointer-events: none;
}

.content-info {
  position: relative;
  z-index: 3;
  margin-top: 16rem;
  padding: 1.5rem;
  padding-inline: 2rem;
  margin-top: auto;
}

.content-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 0;
}

  #tools-bleed-img {
    z-index: 9999;
  }

  @media (max-width: 900px) {
    .content-box {
      width: 100%;
      min-width: 0;
      max-height: none;
      margin: 1.5rem 1rem;
      padding: 3rem 1.25rem 2.5rem;
    }
    .content-info {
      padding-inline: 1.5rem;
    }
  }

  @media (max-width: 600px) {
    .content-box {
      margin: 1rem 0.75rem;
      border-radius: 24px;
      padding: 2.5rem 1rem 2rem;
    }
    .content-info {
      padding-inline: 1rem;
    }
  }
</style>
