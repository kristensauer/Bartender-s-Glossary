---
// see https://fontsource.org/docs/installation
// Supports weights 100-900
import '@fontsource-variable/montserrat';
// Supports weights 300-900
import '@fontsource-variable/merriweather';
import '@fontsource/homemade-apple';

---

<style is:global>
  :root {
    --color-background: #1E1B19;
    --color-text: #C0B3A5;
    --color-compliment: #6D4F3E;
    --color-accent: #728394;
    --color-focus-ring: #829bab;

    --font-heading: 'Montserrat Variable', sans-serif;
    --font-body: 'Merriweather Variable', serif;
    --font-special: 'Homemade Apple', cursive;
  }

  body {
    background-color: var(--color-background);
    color: var(--color-background);
    overflow-x: hidden;
  }
  html {
    overflow-x: hidden;
  }
  
  h1 {
    font-family: var(--font-heading);
    color: var(--color-focus-ring);
    font-size: 1.5vw;
    text-align: center;
  }

  h3 {
    font-family: var(--font-heading);
    color: var(--color-accent);
    font-size: 1.75rem;
    font-weight: medium;
    text-align: center; 
  }
h4, h5, h6, p, {
  font-family: var(--font-body);
  color: var(--color-focus-ring);
  font-size: 1.5rem;
}
ol, ul, li {
  font-family: var(--font-body);
  color: var(--color-background);
  font-size: 1rem;
}
  *:focus-visible {
    outline: 3px solid var(--color-focus-ring);
  }

  .hidden {
  display: none;
}

body {
  font-family: 'Montserrat Variable', sans-serif;
}

body {
  font-family: 'Merriweather Variable', serif;
}
/* content box styling */
  .content-box {
    background: var(--color-text);
    border: 2px solid var(--color-text);
    padding: 4rem 1.5rem 3.5rem 1.5rem;
    margin: 2rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    min-height: 300px;
    max-height: 570px;
    height: auto;
    width: 150%;
    min-width: 340px;
    max-width: 1000px;
    scroll-snap-align: center;
    position: relative;
    right: 0;
    margin-left: auto;
    overflow: visible;
  }
  .steps-box {
    background: var(--color-focus-ring);
    padding: 0.5rem 1.0rem;
    box-shadow: 0 1px 4px rgba(0,0,0,0.03);
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    gap: 0.5rem;
    width: 100%;
    max-width: 100%;
  }
  .content-details {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    gap: 2rem;
    height: 100%;
    padding-top: 2rem;
  }
  .content-info {
    flex: 2;
  }
  .content-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
    border-radius: 50%;
    max-width: 150px;
    max-height: 150px;
    overflow: hidden;
  }
    .content-image {
    position: absolute;
    top: -80px;
    left: 50%;
    transform: translateX(-50%);
    width: 150px;
    height: 150px;
    max-width: 150px;
    max-height: 150px;
    border-radius: 50%;
    box-shadow: 0 2px 8px rgba(0,0,0,0.10);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    z-index: 2;
  }
</style>
