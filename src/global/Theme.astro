---
// see https://fontsource.org/docs/installation
// Supports weights 100-900
import '@fontsource-variable/montserrat';
// Supports weights 300-900
import '@fontsource-variable/merriweather';
---

<style is:global>
  :root {
    --color-background: #1E1B19;
    --color-text: #C0B3A5;
    --color-compliment: #6D4F3E;
    --color-accent: #728394;
    --color-focus-ring: #829bab;

    font-size: 18px;

    --font-heading: 'Montserrat Variable', sans-serif;
    --font-body: 'Merriweather Variable', serif;

    --size-page-width: 800px;
    --size-page-padding: 1rem;
  }

  body {
    background-color: var(--color-background);
    color: var(--color-background);
    font-family: var(--font-body);
  }
  h3 {
    font-family: var(--font-heading);
    color: var(--color-focus-ring);
    font-size: 2.5vw;
    text-align: center;
  }

  h2 {
    font-family: var(--font-heading);
    font-weight: bold;
    color: var(--color-accent);
    font-size: 4vw;
    text-align: center;
    margin-top: 2rem;
    margin-bottom: 2rem;
}

  h3 {
    font-family: var(--font-heading);
    color: var(--color-accent);
    font-size: 1.75rem;
    font-weight: medium;
  }
h4, h5, h6, p, {
  font-family: var(--font-body);
  color: var(--color-focus-ring);
  font-size: 1.5rem;
}
ol, ul, li {
  font-family: var(--font-body);
  color: var(--color-background);
  font-size: 1rem;
}
  *:focus-visible {
    outline: 3px solid var(--color-focus-ring);
  }

  .hidden {
  display: none;
}

body {
  font-family: 'Montserrat Variable', sans-serif;
}

body {
  font-family: 'Merriweather Variable', serif;
}
/* content box styling */
.content-box {
     background: var(--color-text);
     border: 2px solid var(--color-text);
     padding: 1.5rem;
     margin: 2rem;
     box-shadow: 0 2px 8px rgba(0,0,0,0.04);
     min-height: 300px;
  }
  .steps-box {
    background: var(--color-focus-ring);
    padding: 0.75rem 1rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
    box-shadow: 0 1px 4px rgba(0,0,0,0.03);
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .content-details {
     display: flex;
     flex-direction: row;
     align-items: stretch;
     gap: 2rem;
     height: 100%;
  }
  .content-info {
    flex: 2;
  }
  .content-image {
     flex: 1;
     display: flex;
     align-items: stretch;
     justify-content: center;
     min-width: 120px;
     min-height: 120px;
     background: var(--color-text);
     overflow: hidden;
     height: auto;
     min-height: 100%;
  }
  .content-image img {
    width: 100%;
    height: auto;
    object-fit: contain;
    display: block;
    max-width: 100%;
    max-height: 100%;
  }
</style>
