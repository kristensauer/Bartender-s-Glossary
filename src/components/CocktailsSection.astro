---
import TwoColumns from "@components/TwoColumns.astro"
---


<h2 id="cocktails">Cocktails</h2>

<TwoColumns>
  <div slot="left">
    <div class="content-box">
      <div class="content-details">
        <div class="content-info">
          <h3>Margarita</h3>
          <ul>3 oz Tequila</ul>
          <ul>1.5 oz Triple Sec</ul>
          <ul>1.5 oz Sour Mix</ul>
          <div class="steps-box">
            <ol>
              <li>Grab a pint glass and pour the ingredients in</li>
              <li>Add ice and shake</li>
              <li>Grab a margarita glass, rim as needed</li>
              <li>Pour cocktail into the glass and garnish with a lime wheel</li>
            </ol>
          </div>
        </div>
        <div class="content-image">
          <img src=src/assets/images/margarita.jpg alt="Margarita">
        </div>
      </div>
    </div>
    <div class="content-box">
      <div class="content-details">
        <div class="content-info">
          <h3>Hugo Spritz</h3>
          <ul>2 oz Sauvigon Blanc</ul>
          <ul>1.5 oz St. Germain</ul>
          <ul>Club Soda</ul>
          <ul>Mint Leaves</ul>
          <ul>Lemon Wedges</ul>
          <div class="steps-box">
            <ol>
              <li>Grab a pint glass and muddle 4-5 mint leaves and 2-3 slices of lemon</li>
              <li>Pour ingredients in pint glass</li>
              <li>Add ice and shake</li>
              <li>Grab a wine glass and pour cocktail</li>
              <li>Top off with club soda and a lime wedge</li>
            </ol>
          </div>
        </div>
        <div class="content-image">
          <img src=src/assets/images/hugospritz.jpg alt="Hugo Spritz">
        </div>
      </div>
    </div>
    <div class="content-box">
      <div class="content-details">
        <div class="content-info">
          <h3>Paloma</h3>
          <ul>3 oz Agave Tequila</ul>
          <ul>1.5 oz Lime Juice</ul>
          <ul>1.5 oz Agave</ul>
          <ul>0.5 oz Grapefruit Juice</ul>
          <ul>Club Soda</ul>
          <div class="steps-box">
            <ol>
              <li>Grab a pint glass and pour ingredients</li>
              <li>Add ice and shake</li>
              <li>Grab a Collins glass and pour cocktail</li>
              <li>Top off with club soda and a lime wedge</li>
            </ol>
          </div>
        </div>
        <div class="content-image">
          <img src=src/assets/images/paloma.jpg alt="Paloma">
        </div>
      </div>
    </div>
    <div class="content-box">
      <div class="content-details">
        <div class="content-info">
          <h3>Sangria</h3>
          <ul>1.5 oz Red or White Wine</ul>
          <ul>1.5 oz Sour Mix</ul>
          <ul>1.5 oz Brandy</ul>
          <ul>1 Tbsp Sugar</ul>
          <ul>Chopped Apple and Oranges</ul>
          <ul>Club Soda</ul>
          <div class="steps-box">
            <ol>
              <li>Grab a pint glass and grab 2 tong-fulls of chopped apples and oranges</li>
              <li>Pour brandy, sour mix, and sugar into the pint glass</li>
              <li>Add ice, top off with wine and shake</li>
              <li>Grab a wine glass and pour cocktail</li>
              <li>Top off with club soda</li>
            </ol>
          </div>
        </div>
        <div class="content-image">
          <img src=src/assets/images/sangria.jpg alt="Sangria">
        </div>
      </div>
    </div>
  </div>
  <div slot="right">
    <div class="content-box">
      <div class="content-details">
        <div class="content-info">
          <h3>Mojito</h3>
          <ul>3 oz Rum</ul>
          <ul>1.5 oz Lime Juice</ul>
          <ul>1.5 oz Agave</ul>
          <ul>Mint leaves</ul>
          <ul>Club Soda</ul>
          <div class="steps-box">
            <ol>
              <li>Grab a pint glass and muddle 4-5 mint leaves</li>
              <li>Pour ingredients in pint glass</li>
              <li>Add ice and shake</li>
              <li>Grab a Collins glass and pour cocktail</li>
              <li>Top off with club soda and a lime wedge</li>
            </ol>
          </div>
        </div>
        <div class="content-image">
         <img src=src/assets/images/mojito.jpg alt="Mojito">
        </div>
      </div>
    </div>
    <div class="content-box">
      <div class="content-details">
        <div class="content-info">
          <h3>Coconut Martini</h3>
          <ul>1.5 oz Coconut Rum</ul>
          <ul>1.5 oz Vanilla Vodka</ul>
          <ul>0.5 oz Coconut Puree</ul>
          <ul>0.25 oz Pineapple Juice</ul>
          <ul>Coconut Flakes</ul>
          <div class="steps-box">
            <ol>
              <li>Grab a pint glass and pour ingredients</li>
              <li>Add ice and shake</li>
              <li>Grab a chilled martini glass and strain cocktail</li>
              <li>Garnish with coconut flakes</li>
            </ol>
          </div>
        </div>
        <div class="content-image">
          <img src=src/assets/images/cocomartini.jpg alt="Coconut Martini">
        </div>
      </div>
    </div>
    <div class="content-box">
      <div class="content-details">
        <div class="content-info">
          <h3>Mudslide</h3>
          <ul>1.5 oz Kahlua</ul>
          <ul>1.5 oz Irish Cream</ul>
          <ul>1.5 oz Vanilla Vodka</ul>
          <ul>0.5 oz Heavy Cream</ul>
          <ul>Chocolate Syrup</ul>
          <div class="steps-box">
            <ol>
              <li>Grab a blender and add all ingredients</li>
              <li>Add ice and blend</li>
              <li>Grab a Collins glass and decorate with chocolate syrup</li>
              <li>Pour blended cocktail into glass</li>
            </ol>
          </div>
        </div>
        <div class="content-image">
          <img src=src/assets/images/mudslide.jpg alt="Mudslide">
        </div>
      </div>
    </div>
    <div class="content-box">
      <div class="content-details">
        <div class="content-info">
          <h3>Bloody Mary</h3>
          <ul>3 oz Bloody Mary Mix</ul>
          <ul>1.5 oz Vodka</ul>
          <ul>1.5 oz Lemon Juice</ul>
          <ul>Celery</ul>
          <ul>Olives</ul>
          <ul>Lemon Wedge</ul>
          <ul>Lime Wedge</ul>
          <div class="steps-box">
            <ol>
              <li>Grab a pint glass and add ice</li>
              <li>Pour ingredients in pint glass</li>
              <li>Garnish with celery, olives, lemon, and lime</li>
            </ol>
          </div>
        </div>
        <div class="content-image">
           <img src=src/assets/images/bloodymary.jpg alt="Bloody Mary">
        </div>
      </div>
    </div>
    <div class="content-box">
      <div class="content-details">
        <div class="content-info">
          <h3>Old Fashioned</h3>
          <ul>1.5 oz Bourbon Whiskey</ul>
          <ul>1 Sugar Cube</ul>
          <ul>1 Cherry</ul>
          <ul>Orange Peel</ul>
          <ul>Bitters</ul>
          <div class="steps-box">
            <ol>
              <li>Grab a rocks glass and muddle orange peel, cherry, and sugar cube</li>
              <li>Pour bourbon in glass</li>
              <li>Add 2-3 dashes of bitters</li>
              <li>Add ice and stir</li>
            </ol>
          </div>
        </div>
        <div class="content-image">
         <img src=src/assets/images/oldfashioned.jpg alt="Old Fashioned">
        </div>
      </div>
    </div>
  </div>
</TwoColumns>

<style>
h2 {
  text-align: center;
  margin-top: 2rem;
  margin-bottom: 2rem;
}
  .content-box {
     background: var(--color-text);
     border: 2px solid var(--color-text);
     border-radius: 1rem;
     padding: 1.5rem;
     margin: 2rem;
     box-shadow: 0 2px 8px rgba(0,0,0,0.04);
     min-height: 300px;
  }
  .steps-box {
    background: var(--color-accent);
    border-radius: 0.75rem;
    padding: 0.75rem 1rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
    box-shadow: 0 1px 4px rgba(0,0,0,0.03);
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .content-details {
     display: flex;
     flex-direction: row;
     align-items: stretch;
     gap: 2rem;
     height: 100%;
  }
  .content-info {
    flex: 2;
  }
  .content-image {
     flex: 1;
     display: flex;
     align-items: stretch;
     justify-content: center;
     min-width: 120px;
     min-height: 120px;
     background: var(--color-text);
     border-radius: 0.5rem;
     overflow: hidden;
     height: auto;
     min-height: 100%;
  }
  .content-image img {
     height: 100%;
     width: 100%;
     object-fit: cover;
     display: block;
     border-radius: 0.5rem;
     max-height: none;
  }

</style>