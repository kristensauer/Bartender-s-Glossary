---
import TwoColumns from "@components/TwoColumns.astro"
---


<h2 id="tools" class="tools-section-title">Tools</h2>
    <div slot="left" class="tools-vertical-scroll">
                        <div class="content-box tools-content-box-control">
                            <div class="content-details">
                                <div class="content-info">
                                    <h3>Shaker</h3>
                                    <p>A tin or glass used to mix cocktails with ice.</p>
                                </div>
                                <div class="content-image">
                                    <img src=src/assets/images/shaker.jpg alt="Shaker">
                                </div>
                            </div>
                        </div>
                        <div class="content-box tools-content-box-control">
                            <div class="content-details">
                                <div class="content-info">
                                    <h3>Strainer</h3>
                                    <p>Filters ice, fruit, and herbs when pouring a drink.</p>
                                </div>
                                <div class="content-image">
                                    <img src=src/assets/images/strainer.jpg alt="Strainer">
                                </div>
                            </div>
                        </div>
                        <div class="content-box tools-content-box-control">
                            <div class="content-details">
                                <div class="content-info">
                                    <h3>Muddler</h3>
                                    <p>A pestle-like tool for crushing fruits, herbs, or sugar.</p>
                                </div>
                                <div class="content-image">
                                    <img src=src/assets/images/muddler.jpg alt="Muddler">
                                </div>
                            </div>
                        </div>
                        <div class="content-box tools-content-box-control">
                            <div class="content-details">
                                <div class="content-info">
                                    <h3>Juicer/Press</h3>
                                    <p>Extracts fresh juice from lemons, limes, or oranges.</p>
                                </div>
                                <div class="content-image">
                                    <img src=src/assets/images/juicer.jpg alt="Juicer">
                                </div>
                            </div>
                        </div>
                        <div class="content-box tools-content-box-control">
                            <div class="content-details">
                                <div class="content-info">
                                    <h3>Tongs</h3>
                                    <p>For safely grabbing fruit for cocktails.</p>
                                </div>
                                <div class="content-image">
                                    <img src=src/assets/images/tongs.jpg alt="Tongs">
                                </div>
                            </div>
                        </div>
                        <div class="content-box tools-content-box-control">
                            <div class="content-details">
                                <div class="content-info">
                                    <h3>Mixing Glass</h3>
                                    <p>A sturdy glass for stirred drinks like martinis or negronis.</p>
                                </div>
                                <div class="content-image">
                                    <img src=src/assets/images/mixingglass.jpg alt="Mixing Glass">
                                </div>
                            </div>
                        </div>
                        <div class="content-box tools-content-box-control">
                            <div class="content-details">
                                <div class="content-info">
                                    <h3>Jigger</h3>
                                    <p>A double-sided measuring tool for accurate pours.</p>
                                </div>
                                <div class="content-image">
                                    <img src=src/assets/images/jigger.jpg alt="Jigger">
                                </div>
                            </div>
                        </div>
                        <div class="content-box tools-content-box-control">
                            <div class="content-details">
                                <div class="content-info">
                                    <h3>Bar Spoon</h3>
                                    <p>Long-handled spoon for stirring and layering drinks.</p>
                                </div>
                                <div class="content-image">
                                    <img src=src/assets/images/barspoon.jpg alt="Bar-Spoon">
                                </div>
                            </div>
                        </div>
                        <div class="content-box tools-content-box-control">
                            <div class="content-details">
                                <div class="content-info">
                                    <h3>Ice Scoop</h3>
                                    <p>For handling ice cleanly and safely.</p>
                                </div>
                                <div class="content-image">
                                    <img src=src/assets/images/scooper.jpg alt="Ice Scoop">
                                </div>
                            </div>
                        </div>
                        <div class="content-box tools-content-box-control">
                            <div class="content-details">
                                <div class="content-info">
                                    <h3>Bar Key</h3>
                                    <p>For opening beer bottles.</p>
                                </div>
                                <div class="content-image">
                                    <img src=src/assets/images/barkey.jpg alt="Bar Key">
                                </div>
                            </div>
                        </div>
                        <div class="content-box tools-content-box-control">
                            <div class="content-details">
                                <div class="content-info">
                                    <h3>Corkscrew</h3>
                                    <p>For opening wine bottles</p>
                                </div>
                                <div class="content-image">
                                    <img src=src/assets/images/corkscrew.jpg alt="Corkscrew">
                                </div>
                            </div>
                        </div>
                    </div>
                    <style>
                        .tools-section-title {
                            font-family: var(--font-heading);
                            font-size: 8rem;
                            color: var(--color-accent);
                            text-align: center;
                            margin: 2rem 0 1rem 0;
                            letter-spacing: 0.05em;
                        }
                        .tools-content-box-control {
                            width: 550px;
                            height: 100px;
                            max-width: 90vw;
                            min-width: 250px;
                            max-height: 90vw;
                            min-height: 250px;
                            margin: 1rem auto;
                            box-sizing: border-box;
                        }
                        .tools-content-box-control .content-details {
                            display: flex;
                            flex-direction: column;
                            height: 100%;
                        }
                        .tools-content-box-control h3 {
                            margin-top: 9vh;
                        }
                        .tools-content-box-control p {
                            margin-top: -1vh;
                            padding: 0.5rem 1rem;
                            display: flex;
                            justify-content: center;
                        }
                        .tools-content-box-control .content-image {
                            margin-top: 11vh;
                        }
                        .tools-vertical-scroll {
                            max-height: 80vh;
                            overflow-y: auto;
                            display: flex;
                            flex-direction: column;
                            gap: 2rem;
                            align-items: center;
                            justify-content: flex-start;
                            padding: 1rem 0.5rem;
                            scrollbar-width: thin;
                            scrollbar-color: var(--color-accent) var(--color-background);
                        }
                        .tools-vertical-scroll::-webkit-scrollbar {
                            width: 8px;
                        }
                        .tools-vertical-scroll::-webkit-scrollbar-thumb {
                            background: var(--color-accent);
                            border-radius: 4px;
                        }
                        .tools-vertical-scroll::-webkit-scrollbar-track {
                            background: var(--color-background);
                        }
                    </style>
