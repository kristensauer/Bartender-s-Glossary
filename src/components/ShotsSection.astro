<style>
    .content-box {
        background: var(--color-background);
        border: 2px solid var(--color-background);
        border-radius: 1rem;
        padding: 1.5rem;
        margin: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    }
    .content-details {
        display: flex;
        flex-direction: row;
        align-items: stretch;
        gap: 2rem;
        width: 100%;
        
    }
    .content-info {
        flex: 2;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .content-image {
        flex: 1;
        display: flex;
        align-items: stretch;
        justify-content: center;
        min-width: 120px;
        background: var(--color-background);
        border-radius: 0.5rem;
        overflow: hidden;
        height: 100%;
    }
    .content-image img {
        height: 100%;
        width: auto;
        object-fit: cover;
        display: block;
        border-radius: 0.5rem;
        max-height: none;
        aspect-ratio: unset;
    }
</style>
